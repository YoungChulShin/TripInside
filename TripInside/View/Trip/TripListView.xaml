<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="TripInside.View.Trip.TripListView"
             Title="여행 기록">
	<ContentPage.Content>
       <ListView ItemsSource="{Binding Items}" 
                RowHeight="40" Margin="0,20,0,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0" />
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="30" />
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0" Source="{Binding NationalCode}" Aspect="AspectFit" WidthRequest="30" HeightRequest="30"/>
                            <Image Grid.Column="1" Source="{Binding NationalFlag}" Aspect="AspectFit" WidthRequest="30" HeightRequest="30"/>
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0" Text="{Binding Name}" FontSize="14" Margin="30,0,0,0" VerticalOptions="Center" />
                                <Label Grid.Row="1" Text="{Binding DurationString}" FontSize="14" Margin="30,0,0,0" VerticalOptions="Center" />
                            </Grid>
                            <Label Grid.Column="3" Text="{Binding DurationString}" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
	</ContentPage.Content>
</ContentPage>
